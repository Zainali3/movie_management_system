<div class="wrapper container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 " >
      <h1>
      <strong>Title:</strong>
      <%= @movie.title %>
      </h1>

      <h3>
        <strong>Trailer:</strong>
        <br />
        <br />
        <%= raw(@movie.trailer) %>
      </h3>

      <h3>
        <strong>Description:</strong>
        <br />
        <br />
        <%= raw(@movie.description) %>
      </h3>

      <h3>
        <strong>Posters: </strong>
        <% @movie.posters.each do |poster| %>
          <%= image_tag poster.image.url(:thumb) %>
        <% end %>

      <h3>
        <strong>Actors:</strong>
        <%= @movie.actors.collect { |actor| actor.name }.join(', ') %>
      </h3>
      <br />
      <br />
      <div>
        <%= link_to '<-', movies_path, class: 'btn btn-success' %>
        <%= link_to 'Edit', edit_movie_path(@movie), class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
