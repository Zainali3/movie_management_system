<div class="wrapper container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-8 " >
      <h1 class="text-center">Movies</h1>
      <%= button_to 'New Movie', new_movie_path, method: "get", class: 'btn btn-primary' %>
      <br />
      <br />
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Posters</th>
            <th>Actors</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @movies.each do |movie| %>
            <tr>
              <td><%= movie.title %></td>
              <td>
                <% if movie.first_poster.present? %>
                  <%= image_tag movie.posters.first.image.url(:thumb) %>
                <% end %>
              </td>
              <td>
                <%= movie.actors.collect { |actor| actor.name }.join(', ') %>
              </td>
              <td><%= button_to 'Show', movie , method: "get", class: 'btn btn-success' %></td>
              <td><%= button_to 'Edit', edit_movie_path(movie), method: "get", class: 'btn btn-primary' %></td>
              <td><%= button_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>
