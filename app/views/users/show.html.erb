<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h2 class='text-center'>Profile</h2>
      </div>
      <div class='panel-body'>
        <div class='row'>
          <div class='col-md-4'>
            <div><%= image_tag @user.attachment.image.url(:thumb) if @user.attachment %></div>
          </div>
          <div class='col-md-8'>
            <strong>Name:</strong>
            <%= @user.full_name %>
            <div class="clearfix"></div>
            <strong>Email:</strong>
            <%= @user.email %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'favourite_movies/favourite_movies' %>

