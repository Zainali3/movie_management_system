<% title 'New Profile' %>
<h2 class="text-center">Sign up</h2>
<div class="wrapper container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-xs-10">
      <div class="col-md-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :full_name %><br />
            <%= f.text_field :full_name, class: 'form-control', maxlength: 50 %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control', required: true, maxlength: 150 %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true, maxlength: 150 %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
          </div>

          <div class="field">
            <%= f.label "Profile Picture" %>
            <%= f.fields_for :attachment, Attachment.new do |image_form| %>
              <%= image_form.file_field :image %>
            <% end %>
          </div>
          <br />
          <div class="actions ">
            <%= f.submit "Sign up", class: 'btn btn-primary'%>
            <% end %>
          </div>
        <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>


